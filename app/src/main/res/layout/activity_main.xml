<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/lightBlue"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:src="@drawable/ic_welcome_logo"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:textSize="@dimen/text_size_14sp"
        android:layout_marginHorizontal="@dimen/jarak_20dp"
        android:layout_marginTop="@dimen/jarak_20dp"
        android:hint="Username"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:hint="Password"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14sp"
        android:layout_marginHorizontal="@dimen/jarak_20dp"
        android:textColorHint="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/jarak_20dp"
        android:background="@drawable/whiteborder"
        android:layout_marginHorizontal="@dimen/jarak_20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingVertical="@dimen/jarak_20dp"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="@color/white"
        android:layout_marginVertical="@dimen/jarak_14dp"
        android:textSize="@dimen/text_size_16sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:background="@drawable/whiteborder"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/jarak_20dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_marginLeft="46dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/jarak_20dp"
            android:src="@drawable/ic_welcome_fb_login"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/jarak_20dp"
            android:text="Connect With Facebook"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/jarak_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp"
            android:text="doesn't have an account?"/>
        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="@dimen/text_size_10sp"
            android:textSize="@dimen/text_size_14sp"
            android:text="Register"
            android:onClick="openRegisterActivity"/>
    </LinearLayout>

</LinearLayout>